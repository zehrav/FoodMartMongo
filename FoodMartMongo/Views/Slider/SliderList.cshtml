@model List<FoodMartMongo.Dtos.SliderDtos.ResultSliderDto>
@{
    Layout = "_AdminLayout";
}

<h2 class="mb-4 mt-3">Slider Yönetimi</h2>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th class="p-3">Başlık</th>
            <th class="p-3">Alt Başlık</th>
            <th class="p-3">Açıklama</th>
            <th class="p-3">Resim</th>
            <th class="p-3">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="p-3">@item.Title</td>
                <td class="p-3">@item.Subtitle</td>
                <td class="p-3">@item.Description</td>
                <td class="p-3"><img src="@item.ImageUrl" width="150" /></td>
                <td class="p-3">
                    <a href="/Slider/UpdateSlider?id=@item.SliderId" class="btn btn-warning btn-sm me-1">Düzenle</a>
                    <a href="/Slider/DeleteSlider?id=@item.SliderId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="mt-4 mb-5">
  
    <a href="/Slider/CreateSlider" class="btn btn-success me-2">Yeni Slider Ekle</a>
    <a href="/Default/Index" class="btn btn-danger">Çıkış yap</a>
</div>
