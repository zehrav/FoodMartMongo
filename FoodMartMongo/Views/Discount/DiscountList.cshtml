@model List<FoodMartMongo.Dtos.DiscountDtos.ResultDiscountDto>
@{
    ViewData["Title"] = "DiscountList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>İndirimli Ürünler</h2>

<a class="btn btn-primary mb-3" asp-action="CreateDiscount">Yeni İndirimli Ürün Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Alt Başlık</th>
            <th>Açıklama</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Subtitle</td>
                <td>@item.Description</td>
                <td>
                    <img src="@item.ImageUrl" alt="@item.Title" style="width:100px;" />
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="UpdateDiscount" asp-route-id="@item.DiscountId">Güncelle</a>
                    <a class="btn btn-danger" asp-action="DeleteDiscount" asp-route-id="@item.DiscountId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
